<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.silogood.s_permission.MainActivity"
    tools:showIn="@layout/activity_main"
    android:elevation="2dp"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:id="@+id/imageView"
        android:background="@drawable/main"
        android:layout_toEndOf="@+id/applicationbtn"
        android:elevation="2dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        >
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#fff59d"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:elevation="8dp">
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text=""
                    android:id="@+id/applicationbtn"
                    android:background="@drawable/app"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="application"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#fff59d"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:orientation="vertical"
                android:elevation="8dp"
                >

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text=""
                    android:id="@+id/permissionbtn"
                    android:background="@drawable/permi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="permission"
                    />
            </LinearLayout>



    </LinearLayout>



</LinearLayout>
